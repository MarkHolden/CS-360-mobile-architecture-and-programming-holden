<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:outlineAmbientShadowColor="@color/purple_200">

    <TextView
        android:id="@+id/event_list_name"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_list_description"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/event_list_name"
        app:layout_constraintTop_toBottomOf="@+id/event_list_name" />

    <TextView
        android:id="@+id/event_list_start_time"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="TextView"

        app:layout_constraintEnd_toEndOf="@+id/event_list_name"
        app:layout_constraintStart_toEndOf="@+id/event_list_description"
        app:layout_constraintTop_toBottomOf="@+id/event_list_name" />

    <TextView
        android:id="@+id/event_list_end_time"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/event_list_start_time"
        app:layout_constraintStart_toStartOf="@+id/event_list_start_time"
        app:layout_constraintTop_toBottomOf="@+id/event_list_start_time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent" />

